<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>TriPeaks Solitaire</title>

    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

    <!-- Custom font -->
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">

    <!-- My styling -->
    <link rel="stylesheet" href="style.css">

    <!-- Favicon -->
    <link rel="shortcut icon" href="./images/favicon.ico">
    <link rel="icon" href="./images/favicon.ico">

    <!-- Javascript game logic file -->
    <script src="game.js"></script>

    <!-- Google analytics -->
    <script>
        (function(i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r;
            i[r] = i[r] || function() {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date();
            a = s.createElement(o),
                m = s.getElementsByTagName(o)[0];
            a.async = 1;
            a.src = g;
            m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-90513316-1', 'auto');
        ga('send', 'pageview');
    </script>

</head>

<body>
    <div class="headerBox">
        <div class="header">
            <div id="reset" class="leftHead">Reset</div>
            <div class="midHead">TriPeaks Solitaire</div>
            <div id="newHand" class="rightHead">New Hand</div>
        </div>
    </div>
    <div class="board">
        <div class="cardStage">
            <div class="pyramids">
                <div class="leftPyramid">
                    <div class="firstTier">
                        <div class="cardBox">
                        </div>
                    </div>
                    <div class="secondTier">
                        <div class="cardBox">
                        </div>
                    </div>
                    <div class="thirdTier">
                        <div class="cardBox">
                        </div>
                    </div>
                </div>
                <div class="midPyramid">
                    <div class="firstTier">
                        <div class="cardBox">
                        </div>
                    </div>
                    <div class="secondTier">
                        <div class="cardBox">
                        </div>
                    </div>
                    <div class="thirdTier">
                        <div class="cardBox">
                        </div>
                    </div>
                </div>
                <div class="rightPyramid">
                    <div class="firstTier">
                        <div class="cardBox">
                        </div>
                    </div>
                    <div class="secondTier">
                        <div class="cardBox">
                        </div>
                    </div>
                    <div class="thirdTier">
                        <div class="cardBox">
                        </div>
                    </div>
                </div>
            </div>
            <div class="fourthTier">
                <div class="cardBox">

                </div>
            </div>
            <div class="stockPile">
                <div class="cardBoxpile">
                </div>
                <div class="cardBoxplay">
                </div>
            </div>
        </div>
        <footer class="stickyFooter">
            <div class="score">
                <div>Score: <span class="scoreNumbers" id="scoreSpan"></span></div>
                <div>Streak: <span class="scoreNumbers" id="scoreStreakSpan"></span></div>
                <table class="hiScoreTable">
                    <tr class="headerRow">
                        <th>User</th>
                        <th>Score</th>
                    </tr>
                    <tr class="scoreRow">
                        <td>
                            <span class="scoreNumbers" id="firstPlace"></span>
                        </td>
                        <td>
                            <span class="scoreNumbers" id="firstPlaceScore"></span>
                        </td>
                    </tr>
                    <tr class="scoreRow">
                        <td>
                            <span class="scoreNumbers" id="secondPlace"></span>
                        </td>
                        <td>
                            <span class="scoreNumbers" id="secondPlaceScore"></span>
                        </td>
                    </tr>
                    <tr class="scoreRow">
                        <td>
                            <span class="scoreNumbers" id="thirdPlace"></span>
                        </td>
                        <td>
                            <span class="scoreNumbers" id="thirdPlaceScore"></span>
                        </td>
                    </tr>
                </table>
            </div>
        </footer>
    </div>


</body>

</html>
